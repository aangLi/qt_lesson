link_color = #3377aa
border_color = #eaeaea

*
    margin 0
    padding 0

body
    font-size: 12px
    font-family: sans-serif
    /* 行高代表字体乘以行高来代表字体所占大小 */
    line-height: 1.62

a
    text-decoration: none
    color: link_color
    cursor: pointer
    &:visited
        color: #666699
    &:hover
        display: block
        color: #ffffff
        background-color link_color
        width 100%
    
table
    // 间隙
    border-collapse: collapse
    border none 
    padding 0
    margin 0

.billboard
    margin-bottom: 50px
    width 290px
    h2
        color: #111111
        padding-bottom: 10px
        border-bottom: 1px solid border_color
        font-size: 16px
        margin-bottom: 12px
        line-height: 150%
        span
            font-size: 13px
            margin-left: 12px
    td
        padding 7px 0
        border: 1px solid border_color
        &:nth-child(2n+1)
            width 20px
            font-size: 9px
            text-align: center
        &:nth-child(2n)
            width 290px



    