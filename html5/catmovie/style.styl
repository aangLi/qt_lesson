$hdbg_color=#e54847
$font_color_block=#ffffff
html,body
    width 100%
.flex
    display: flex

.flex1
    flex:1

.section-title
    font-size: 24px
    color: #000000
    font-weight: bold
.actor-list.section-title
    padding-left 0.4rem

.section-content
    width 100%
    padding .3rem .3rem .1rem 0rem
    box-sizing: border-box

header
    height 1.067rem
    font-size: 18px
    text-align: center
    background-color $hdbg_color//定义变量，好改
    padding 6px
    box-sizing border-box
    .arrow-left
        float left
        height 100%
        position relative
        &:after
            content ''
            width 12px
            height 12px
            position absolute
            top 50%
            left 16px
            border 2px solid #ffffff
            border-width 0 0 2px 2px
            transform rotate(45deg) translateY(-70%)
    span
        color $font_color_block
        display inline-block
.page
    background #f4f4f4
    position relative
    z-index 1
    margin 0
    color #555555
    min-width 3.1rem
    -webkit-tap-highlight-color rgba(255,255,255,0)
    font 14px/1.5 Arial,Helvetica,sans-serif
    section
        background #ffffff
        border-bottom 1px solid #e5e5e5
    .movie-header
        padding 0
        background #f8f8f8
        border-bottom none
        .movie
            color #ffffff
            padding 0.4rem
            line-height 1
            position relative
            box-sizing border-box
            filter blur(0)
            overflow hidden
            .movie-background,
            .movie-filter
                position absolute
                top 0
                right 0
                left 0
                bottom 0
            .movie-background
                z-index 0
                filter blur(0.6rem)
                -webkit-filter blur(0.6rem)
                background-image: url(./images/header-bg.jpg)
                background-size cover
                background-repeat no-repeat
                background-position-y 40%
            .movie-filter
                background-color #40454d
                opacity 0.5
            .movie-container
                z-index 1
                position relative
                overflow hidden
                .movie-cover
                    float left
                    width 2.854rem
                    height 4rem
                    border: 1px solid #f0f2f3
                    position relative                 
                    .img
                        width 100%
                    &:after
                        content ''
                        display block
                        width 1.8rem
                        height 1.8rem
                        background-image url(./images/bofang.png)
                        background-size 100% auto
                        position absolute
                        left 50%
                        top 50%
                        transform translate(-50%,-50%)
                        opacity 0.7
                .movie-content
                    overflow hidden
                    padding-left: 0.4rem
                    .movie-name
                        font-size: 17px
                        margin 0 0.08rem 0
                    .movie-ename
                        font-size: 12px
                        margin-bottom: 0.3rem
                .movie-score
                    overflow hidden
                    font-size: 12px
                    padding: 0.3rem 0rem .3rem .4rem
                    .rating
                        .img
                            width 0.48rem
                            height 0.48rem
                            margin-right 2px
                        .rating-score
                            font-size: .48rem
                            color: #ffc600
                .movie-detail
                    overflow: hidden
                    font-size: 12px
                    padding: 0.3rem 0rem .3rem .4rem 
                    opacity .7
                    div,p
                        margin-bottom: 0.14rem
            .operating
                padding-top: 0.4rem
                div
                    border: 1px solid  rgba(255,255,255,0.4)
                    background-color: rgba(255,255,255,0.4)
                    font-size: 14px
                    color: #ffffff
                    position relative
                    z-index 2
                    text-align: center
                    padding 0.25rem 0
                    border-radius: 4px
                    img
                        // 上下居中
                        vertical-align: middle
                    span
                        vertical-align: middle
                
                .movie-watch
                    margin-right 0.3rem
                    img
                        width 14px
                .movie-mark
                    img
                        width 18px
    .section-seperate1
        padding 0.4rem
    // border-top 1px solid $bd_color
    .section-extender
        padding-left: 0.4rem
        padding-right: 0.4rem
    // id 选择器的权重比 class 高 !important 权重最高
    .section-seperate
        padding-top: 0.4rem
        margin-bottom 0.3rem
        .text-expander
            &__content.close
                min-height 65px
                display -webkit-box
                overflow hidden
                // 内容超出这打点
                text-overflow: ellipsis
                // 自动换行
                word-break: break-all
                -webkit-box-orient: vertical
                // 显示行数
                -webkit-line-clamp 3
            &__content.open
                -webkit-line-clamp 5555
            &__button
                height 0.7rem
                text-align: center
                .icon-chevron__down
                    display inline-block
                    width: 0.3rem
                    height 0.3rem
                    border: 1px solid #000000
                    transform: rotateZ(135deg)
                    border-top: none
                    border-right: none
                    box-sizing: border-box
                    transition: transform .5s
                .icon-chevron__down.up
                    transform rotateZ(-45deg)
    .section-seperate
        .movie-celebrities
            overflow-x: scroll
            white-space: nowrap
            box-sizing: border-box
            li
                text-align: center
                display inline-block
                padding 0.04rem
                .link
                    color: #000000
                .movie-celebrities__pic
                        width 1.7334rem
                        height 2.4rem
                        margin 0.05rem
                    img
                        width 100%
                    span
                        display: block
                        font-size: .2rem
                        text-overflow: ellipsis
                        overflow: hidden
                        // 不换行
                        white-space: nowrap
                    .movie-celebrities-roles
                        color: #999999
    .movie-booking
        padding-bottom: 0.2rem
        .weui-flex
            text-align: center
            .placeholder
                span
                    font-size: 24px
                    color: #d96a3d
                p
                    color #bababa
                    font-size: 16px
                    font: Arial
    .section-seperate
        .movie-pic
            overflow-x: scroll
            white-space nowrap
            li
                display inline-block
                padding: 0.04rem
                img
                    height 2.382rem
    
    .section-seperate1
        .movie-talking
            position relative
            overflow hidden
            .movie-talking__left
                display inline-block
                left 0  
            .movie-talking__right
                float right
                right 0
        .movie-btn
            background-color red
            border none
            padding: 0.2rem 0.4rem
            box-sizing: border-box
            border-radius: 20px
            & p
                font-size: 20px
                color: white
                font-weight: 550
        li
            display inline-block
            padding: 0.134rem
            .movie-btn
                background-color #fff
                display inline-block
                border: 1.5px solid grey 
                p
                    font-size: 17px
                    color: black
                    font-weight: 300   
        .comment-container
            
    #toast
        display: none
    .toast-active
        display: block !important
